{
  "name": "odin-form-validation",
  "version": "1.0.0",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.3",
    "htmlhint": "^1.7.1",
    "prettier": "3.6.2",
    "style-loader": "^4.0.0",
    "stylelint": "^16.24.0",
    "stylelint-config-recommended": "^17.0.0",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  },
  "scripts": {
    "clean": "rm -rf dist/",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:js": "eslint src",
    "lint:js:fix": "eslint src --fix",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint:css:fix": "stylelint 'src/**/*.css' --fix",
    "lint:html": "htmlhint 'src/**/*.html'",
    "format": "prettier --write 'src/**/*.{js,ts,jsx,tsx,json,md,css,scss,html}'",
    "format:check": "prettier --check 'src/**/*.{js,ts,jsx,tsx,json,md,css,scss,html}'",
    "lazy-build": "webpack --config webpack.prod.js",
    "build": "webpack --config webpack.prod.js",
    "dev": "webpack serve --config webpack.dev.js",

    "commit": "git commit",
    "commit:all": "git add -A && git commit",
    "precommit": "npm run lint",
    "precommit:all": "npm run lint",


    "deploy": "git subtree push --prefix dist origin deploy",
    "prebuild": "npm run format && npm run lint && npm run clean",
    "predeploy": "git checkout deploy && git merge main --no-edit && npm run build && git add dist -f && git commit -m 'Deployment commit'",
    "postdeploy": "git checkout main && git branch && echo 'Deploy has been successful!'"
  }
}
